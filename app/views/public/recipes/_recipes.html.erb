<div class="col-md-4">
    <div class="d-flex justify-content-center">
        <% if recipe.recipe_image.attached? %> 
            <%= image_tag recipe.recipe_image, :size => "280x250", style: "object-fit: cover;" %>
        <% else %>
            <%= image_tag 'no_recipe_image.png', :size => "280x250", style: "object-fit: cover;"%>
        <% end %>
    </div>
    <div class="d-flex justify-content-center">
        <% if current_page?(controller: 'admin/homes', action: 'top') %><!--管理者用トップページ-->
            <%= link_to admin_recipe_path(recipe.id) do %>
                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
            <% end %>
        <% elsif current_page?(controller: 'admin/recipes', action: 'index') %><!--管理者用レシピ一覧-->
            <%= link_to admin_recipe_path(recipe.id) do %>
                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
            <% end %>
        <% elsif current_page?("/admin/categories/category_id/recipes") %><!--管理者用該当カテゴリーに関するレシピ一覧-->
            <%= link_to admin_recipe_path(recipe.id) do %>
                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
            <% end %>
        <% elsif current_page?("/admin/tags/tag_id/recipes") %><!--管理者用該当タグに関するレシピ一覧-->
            <%= link_to admin_recipe_path(recipe.id) do %>
                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
            <% end %>
        <% else %>
            <%= link_to recipe_path(recipe.id) do %>
                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
            <% end %>
        <% end %>
        <span>♡</span><%= recipe.favorites.count %>   
    </div>
</div>