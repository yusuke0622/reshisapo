<div class="container">
    <div class="col-md-10 mx-auto">
        <div class="mt-5">
            <h1 class="font-weight-bold text-center">ユーザー一覧</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= user.id %></td>
                        <td>
                            <%= link_to admin_user_path(user.id) do %>
                                <%= user.name %>
                            <% end %>
                        </td>
                        <td><%= user.email %></td>
                        <td> 
                            <% if user.is_deleted != true %>
                                <span class="text-success">有効</span>
                            <% else %>
                                <span class="text-secondary">退会</span>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to '削除', admin_user_path(user.id), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" } %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table> 
        <div class="d-flex justify-content-center mt-5">
                <%= paginate @users %>
        </div>
    </div>
</div>