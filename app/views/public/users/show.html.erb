<div class="container">
    <div class="col-md-11 mx-auto mt-5">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="col-md-4 text-center">
                <% if @user.user_icon.present? %>
                    <%= image_tag @user.user_icon, :size => "200x200", class: 'rounded-circle', style: "object-fit: cover;" %>
                <% else %>
                    <%= image_tag 'no_image.jpg', :size => "200x200", class: 'rounded-circle' %>
                <% end %>
                <h3 class="text-center"><%= @user.name %></h3>
                <% if user_signed_in? %>
                    <div class="d-flex flex-column">
                        <% if @user.id == current_user.id %>
                                <%= link_to 'プロフィールを編集する', users_information_edit_path, class: 'btn btn-outline-secondary mt-2' %>
                        <% end %>
                        <%= link_to 'お気に入りレシピ', favorites_user_path(@user), class: 'btn btn-warning my-3' %>
                        <%= link_to 'レシピ投稿', new_recipe_path, class: 'btn btn-outline-success' %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="row mt-4 d-flex justify-content-center">
            <h2>投稿一覧</h2>
        </div>
        <div class="col-md-12 mt-5">
            <div class="d-flex flex-wrap">
                <%= render partial: "public/recipes/recipes", collection: @recipes, as: :recipe %>
            </div>
            <div class="d-flex justify-content-center mt-5">
                <%= paginate @recipes %>
            </div>
        </div>
         
    </div>
</div>