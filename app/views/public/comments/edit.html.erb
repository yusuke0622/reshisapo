<div class="container">
    <div class="col-md-8 mx-auto">
        <div class="text-center">
            <h2>コメント編集</h2>
        </div>
        <div>
           <%= form_with(model:[@recipe, @comment],method: :patch) do |f| %>
                <div class="form-group text-center mt-2">
                    <%= f.text_area :content, row: 3, class: 'col-md-8 text-form mt-2' %>
                    <%= f.hidden_field :recipe_id, value: @recipe.id %><br>
                    <%= f.submit '更新', class: 'btn btn-success mt-2' %>
                </div>
            <% end %>
        </div>
    </div>
</div>