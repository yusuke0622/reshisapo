<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <%= form_with model: @category, url: admin_category_path, method: :PATCH do |f| %>
                <%= f.label :category_name, 'カテゴリー名' %>
                <%= f.text_field :category_name, class: 'form-control text-form' %>
                <div class="row justify-content-center">
                <%= f.submit '更新', class: 'btn btn-success col-md-3 mt-3' %>
                </div>
            <% end %>
        </div>
    </div>
</div>