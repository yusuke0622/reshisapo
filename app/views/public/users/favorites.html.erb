<div class="container">
    <div class="col-md-11 mx-auto">
        <div class="mt-5">
            <h2 class="font-weight-bold text-center">お気に入りレシピ</h2>
        </div>
        <div class="d-flex flex-wrap">
            <% @favorite_recipes.each do |recipe| %>
            <div class="column ml-5">
                <% if recipe.recipe_image.attached? %> 
                        <%= image_tag recipe.recipe_image.variant(resize: "250x300") %>
                <% else %>
                        <%= image_tag 'no_image.jpg', :size => "250x300" %>
                <% end %>
                    <%= link_to recipe_path(recipe.id) do %>
                    <p class="text-center">
                        <%= recipe.recipe_name %>
                    <% end %>
                    <span>♡</span><%= recipe.favorites.count %>
                    </p>
            </div>
                <%#= render 'public/recipes/recipe_index'%>
            <% end %>
        </div>
        <!--<div class="d-flex justify-content-center mt-5">
            <%#= paginate @favorite_recipes %>
        </div>-->
    </div>
</div>