<div class="container">
    <div class="col-md-10">
        <div class="col-md-5 mr-auto">
            <h1>
                <%= @recipe.recipe_name %>
            </h1>
        </div>
        <div class="row">
            <div class="col-md-6">
                <% if @recipe.recipe_image.present? %>
                    <%= image_tag @recipe.recipe_image.variant(resize: "500x450") %>
                <% else %>
                    <%= image_tag 'no_image.jpg', :size => "100x100" %>
                <% end %>
            </div>
            <div class="col-md-5 ml-3">
                <%= @recipe.category_id %><br>
                <% @recipe.tags.each do |tags| %>
                    <div class="tag-list">
                        <%= tag.tag_name %>
                    </div><br>
                <% end %>
                <%= @recipe.introduction %>
            </div>
        </div>
        <div class="col-md-8">
            <h2>材料（<%= @recipe.serving %>人分）</h2>
            <table class="table table-borderless">
                <tr>
                    <th>食材・調味料</th>
                    <th>分量</th>
                </tr>
                <% @recipe.ingredients.each do |ingredient| %>
                <tr>
                    <td><%= ingredient.ingredient_name %></td>
                    <td><%= ingredient.quantity %></td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="d-flex flex-row flex-warp">
            <h2>作り方</h2><br>
            <% @recipe.steps.each do |step| %>
                <div class="col-md-5">
                    <%= step.number %><br>
                    <% if @step.step_image.present? %>
                        <%= image_tag step.step.image.variant(resize: "300x200") %><br>
                    <% else %>
                        <%= image_tag 'no_image.jpg', :size => "100x100" %><br>
                    <% end %>
                    <%= step.explanation %>
                </div>
            <% end %>
        </div>
        <div class="text-center">
            <%= link_to '編集', edit_recipe_path(@recipe.id) %>
        </div>
    </div>
