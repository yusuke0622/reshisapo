<!---管理者--->
<% if current_page?(controller: 'admin/recipes', action: 'show') %>
<!---ユーザー情報-->
    <%= link_to admin_user_path(@recipe.user.id), class: 'd-flex' do %>
        <% if @recipe.user.user_icon.present? %>
            <%= image_tag @recipe.user.user_icon, :size => "30x30", class: 'rounded-circle', style: "object-fit: cover;" %>
        <% else %>
            <%= image_tag 'no_image.jpg', :size => "30x30", class: 'rounded-circle'%>
        <% end %>
        <h3 class="text-dark ml-3 font-weight-normal"><%= @recipe.user.name %></h3>
    <% end %>
<!--カテゴリー-->  
    <div class="mt-2"> 
        <h6>カテゴリー</h6>
        <%= link_to admin_category_recipes_path(category_id: @recipe.category.id) do %>
           <h6 class="text-dark ml-3"><%= @recipe.category.category_name %></h6>
        <% end %>
    </div> 
    <!--タグ--->
    <div class="d-flex mt-2">   
        <% @recipe.tags.each do |tag| %>
            <div class="tag-list">
                <%= link_to admin_tag_recipes_path(tag_id: tag.id) do %>
                    <h6 class="text-dark ml-1">#<%= tag.tag_name %></h6>
                <% end %>
            </div>
        <% end %>
    </div>
<!---ユーザ--->
<% else %>
<!---ユーザー情報-->
    <%= link_to user_path(@recipe.user.id), class: 'd-flex' do %>
        <% if @recipe.user.user_icon.present? %>
            <%= image_tag @recipe.user.user_icon, :size => "30x30", class: 'rounded-circle', style: "object-fit: cover;" %>
        <% else %>
            <%= image_tag 'no_image.jpg', :size => "30x30", class: 'rounded-circle'%>
        <% end %>
        <h3 class="text-dark ml-3 font-weight-normal"><%= @recipe.user.name %></h3>
    <% end %>
<!--カテゴリー-->  
    <div class="d-flex mt-2"> 
        <h6>カテゴリー</h6>
        <%= link_to category_recipes_path(category_id: @recipe.category.id) do %>
           <h6 class="text-dark ml-3"><%= @recipe.category.category_name %></h6>
        <% end %>
    </div> 
<!--タグ--->
    <div class="d-flex mt-2">   
        <% @recipe.tags.each do |tag| %>
            <div class="tag-list">
                <%= link_to tag_recipes_path(tag_id: tag.id) do %>
                    <h6 class="text-dark ml-1">#<%= tag.tag_name %></h6>
                <% end %>
            </div>
        <% end %>
    </div>
<% end %>
<div class="mt-1">
    <h5>(紹介文)</h5>
    <p><u><%= @recipe.introduction %></u></p>
</div>
