 <div class="d-flex flex-wrap">
    <% @recipes.each do |recipe| %>
        <div class="col-md-4">
            <div class="d-flex justify-content-center flex-column">
                <% if recipe.recipe_image.attached? %> 
                    <%= image_tag recipe.recipe_image.variant(resize: "260x220"), style: "object-fit: contain;" %>
                <% else %>
                    <%= image_tag 'no_recipe_image.png', :size => "260x220", style: "object-fit: contain;"%>
                <% end %>
            </div>
            <div class="d-flex justify-content-center">
                <%= link_to recipe_path(recipe.id) do %>
                    <p class="text-center text-dark"><%= recipe.recipe_name %></p>
                <% end %>
                <span>â™¡</span><%= recipe.favorites.count %>   
            </div>
        </div>
    <% end %>
</div>