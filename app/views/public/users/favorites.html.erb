<div class="container">
    <div class="col-md-11 mx-auto">
        <div class="mt-5">
            <h2 class="font-weight-bold text-center">お気に入りレシピ</h2>
        </div>
        <div class="col-md-12 mt-5">
            <div class="d-flex flex-wrap">
                <% @favorite_recipes.each do |recipe| %>
                    <div class="col-md-4">
                        <div class="d-flex justify-content-center flex-column">
                           <% if recipe.recipe_image.attached? %> 
                            <%= image_tag recipe.recipe_image.variant(resize: "260x220"), style: "object-fit: contain;" %>
                           <% else %>
                            <%= image_tag 'no_recipe_image.png', :size => "260x220", style: "object-fit: contain;" %>
                           <% end %>
                        </div>
                        <div class="d-flex justify-content-center">
                            <%= link_to recipe_path(recipe.id) do %>
                                <p class="text-center text-dark"><%= recipe.recipe_name %></p>
                            <% end %>
                            <span>♡</span><%= recipe.favorites.count %>   
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <%= paginate @favorite_recipes %>
        </div>
    </div>
</div>