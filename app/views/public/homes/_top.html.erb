<div class="col-md-4 mr-auto">
    <h2 class="font-weight-bold mb-4">新着投稿</h2>
</div>
<div class="d-flex flex-wrap flex-row bd-highlight">
    <% @recipes.each do |recipe| %>
        <div class="col-md-5">
            <% if recipe.recipe_image.attached? %> 
                <%= image_tag recipe.recipe_image, :size => "280x220" %>
            <% else %>
                <%= image_tag 'no_recipe_image.png', :size => "280x220" %>
            <% end %>
            <p class="text-center"><%= recipe.recipe_name %></p>
        </div>
    <% end %>
</div>

